// This is your blueprint for the database
generator client {
  provider = "prisma-client"
  output   = "../src/generated" // This tells Prisma where to put the files
}

datasource db {
  provider = "postgresql"
  // The 'url' property is removed from here in version 7
}

// Minimal Table for WorkAdventure to start
model User {
  id       Int     @id @default(autoincrement())
  uuid     String  @unique
  username String?
  email    String? @unique
}

model Room {
  id       Int     @id @default(autoincrement())
  roomUrl  String  @unique
  isPublic Boolean @default(true)
}