// This is your blueprint for the database
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Minimal Table for WorkAdventure to start
model User {
  id       Int     @id @default(autoincrement())
  uuid     String  @unique
  username String?
  email    String? @unique
}

model Room {
  id          Int     @id @default(autoincrement())
  roomUrl     String  @unique
  isPublic    Boolean @default(true)
}