{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "strict": true,
        "declaration": true,
        "module": "commonjs",
        "sourceMap": true,
        "types": ["node"],
        "rootDir": "../../",
        "rootDirs": ["./src", "../room-api-clients"],
        "outDir": "./dist",
        "target": "es2019",
        "esModuleInterop": true,
        "composite": true,
        "lib": ["es2019", "dom"],
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "../../node_modules/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/ts-proto-generated/**/*.ts",
        "../room-api-clients/google/protobuf/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
}